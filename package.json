{
  "name": "base16-viewer",
  "description": "A static website to view and compare base16 schemes",
  "author": {
    "name": "Nico Ismaili"
  },
  "version": "0.0.1",
  "dependencies": {
    "@astrojs/check": "^0.8.0",
    "@astrojs/tailwind": "^5.1.0",
    "@types/js-yaml": "^4.0.9",
    "astro": "^4.4.11",
    "axios": "^1.7.2",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.7",
    "tailwindcss": "^3.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nico-i/ts-config": "^1.0.0",
    "commitlint-plugin-spend": "^1.0.1",
    "husky": "^9.1.2"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "test": "bun test",
    "test:watch": "bun run test -- --watch",
    "astro": "astro",
    "prepare": "husky || true",
    "lint": "eslint .",
    "lint:types": "tsc --noEmit --incremental false",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
